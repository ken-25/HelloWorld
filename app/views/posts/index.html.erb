<% provide(:title, "投稿一覧") %>
<div class="main-content">
  <h1>投稿一覧</h1>
  <p>ここは投稿一覧です</p>

  <%= link_to("新規投稿", new_post_path) %>

  <% @posts.each do |post| %>
  <div class="postindex-content">
    <div class="postindex-img">
      <img src="<%= "/users_img/#{post.user.img_name}" %>" alt="">
    </div>
    <div class="postindex-text">
      <div class="postindex-user">
        <%= link_to(post.user.name, user_path(post.user_id)) %>
      </div>
      <div class="postindex-tweet">
        <%= link_to(safe_join(post.content.split("\n"), tag(:br)), post_path(post.id)) %>
      </div>
      <div class="postindex-icon">
        <%= render partial: 'likes/like', locals: { post: post } %>
      </div>
      <div class="postindex-date">
        <%= post.created_at %>
      </div>
    </div>
  </div>
  <% end %>

</div>
