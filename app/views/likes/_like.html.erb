<div id="like_<%= post.id %>">
  <% if @current_user %>
    <% if Like.find_by(user_id: @current_user.id, post_id: post.id) %>
      <%= link_to(like_path(post.id) , method: :delete, remote: true) do %><i class="fas fa-star favorite"></i><% end %>
    <% else %>
      <%= link_to(like_path(post.id), method: :put, remote: true) do %><i class="fas fa-star nofavorite"></i><% end %>
    <% end %>
    <%= Like.where(post_id: post.id).count %>
  <% end %>
</div>
