<div class="main-content">
  <h1>パスワードの変更</h1>
  <p></p>

  <div class="user-new">
    <dib class="error-message">
      <% @user.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <%= @error_message %>
    </dib>
    <%= form_tag("/user/#{@current_user.id}/update_password", method: :put) do %>
    <p>現在のパスワード</p>
    <input type="password" name="old_password" value="">
    <p>新しいパスワード</p>
    <input type="password" name="new_password" value="">
    <p>新しいパスワード(確認用)</p>
    <input type="password" name="confirmation_password" value="">
    <input type="submit" value="保存">
    <% end %>
  </div>
</div>
